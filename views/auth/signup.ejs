<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
    <style>
        form{
            background:rgba(0, 0, 0, 0.808);
            color:white;
            border-radius: 5px;
            padding: 12px;
            font-family: 'Quicksand', sans-serif;
            box-shadow: 5px 20px 50px #9b9999;
        }
        form h3{
            text-align: center;
        }
    </style>
<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"> <%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <h3>SignUp Form</h3>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : ''  %>"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : ''  %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : ''  %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Sign In</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %></body>